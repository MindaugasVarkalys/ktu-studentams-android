<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grades_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/semesters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gradesSpinner_margin"
            android:prompt="@string/select_semester" />

        <Spinner
            android:id="@+id/modules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gradesSpinner_margin"
            android:prompt="@string/select_module"/>

        <TableLayout
            android:id="@+id/grades_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/gradesTable_margin"
            android:stretchColumns="*">

            <TableRow
                android:background="@drawable/cell_shape">

                <TextView
                    android:layout_column="0"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:text="@string/no"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="1"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:text="@string/name"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="2"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:text="@string/one"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="3"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:text="@string/two"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="4"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:text="@string/tree"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</ScrollView>
